---
import NavButton from "./NavButton.astro";
const { url, title, description, version, tags } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<li class="script">
  <div class="card_head">
    <h3><a href={url}>{title}</a></h3>
    <span class="version">Ver. {version}</span>
  </div>
  <div class="card_body">
    <p>{description}</p>
  </div>
<!--   <NavButton text="Go to script" url={url} title={title} />
 -->  <div class="tags">
      {
        tags.map((tag: any) => (
          <span class="tag">
            <a href={base + "tags/" + tag}>{tag}</a>
          </span>
        ))
      }
    </div>
</li>

<style>
  .script {
    background-color: white;
    color: black;
    border-radius: 5px;
    padding: 0 0.5rem;
    /*width: 300px;*/
    
    min-width: 300px;
    max-width: 80ch;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.25);
    justify-self: center;
    position: relative;
  }

  .card_head {
    /* background-color:#C7C9FF; */
    border-radius: 5px 5px 0 0;
  }
  .card_head,
  .card_body {
    padding: 0.25rem 0.5rem 0 0.5rem;
  }

  h3 {
    font-size: 1.5rem;
    margin: 1em 0 0 0;
  }

  h3 > a {
    text-decoration: none;
    color: black;
    margin: 0;
    padding: 0
  }

