---
const { url, title, description, version, tags } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<li class="script">
  <div class="card_head">
    <h3><a class="script_title" href={url}>{title}</a></h3>
  </div>
  <div class="card_body">
  <p>{description}</p>
  <span class="version">Ver. {version}</span>
  <div class="tags">
    {
      tags.map((tag: any) => (
        <span class="tag">
          <a href={base + "tags/" + tag}>{tag}</a>
        </span>
      ))
    }
    </div>
  </div>
</li>

<style>
  .script {
    background-color: #fff;
    border-radius: 5px;
    padding: 0;
    width: 300px;
    max-width: 80ch;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.25);
    justify-self: center;
    position: relative;
  }

  .card_head{
    background-color:#C7C9FF;
    border-radius: 5px 5px 0 0;
  }
  .card_head, .card_body{
    padding: 0.25rem 0.5rem;
  }

  h3>a{
    text-decoration: none;
    color: #000475;
  }

  .script_title::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: 1;
    cursor: pointer;
    border: 2px solid transparent;
    border-radius: 0.5rem;
    transition: border-color 200ms;
  }

  .script_title:hover::before,
  .script_title:focus-visible::before {
    border-color: rebeccapurple;
  }
  .version {
    font-size: 0.85rem;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
    border-top: 1px solid black;
    width: 100%;
    padding-top: 0.5rem;
  }

  .tag {
    background-color: #392d44;
    color: white;
    padding: 0.25rem;
    border-radius: 4px;
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    margin: 0.5rem;
  }
  .tag a {
    position: relative;
    z-index: 2;
    color: white;
    text-decoration: none;
  }
  .tag a:hover {
    text-decoration: underline;
  }
</style>
